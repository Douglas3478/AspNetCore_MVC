@{
    var user = await UserManager.GetUserAsync(User);
}

<div class="container">
    <a id="logo" asp-action="Home" asp-controller="Default">
        <img src="images/logos/Silicon-Logotype-Light_Mode.svg" alt="Silicon logotype">
        </a>

        <nav>
            <a class="menu-link" asp-action="Home" asp-controller="Default" asp-fragment="showcase">Overview</a>

            @if(SignInManager.IsSignedIn(User))
            {
            <a class="menu-link" asp-action="Index" asp-controller="Courses">Courses</a>
            }
            else
            {
            <a class="menu-link" asp-action="Home" asp-controller="Default" asp-fragment="features">Features</a>
            }
            <a class="menu-link" asp-action="Home" asp-controller="Default">Contact</a>
        </nav>

    <div id="theme-switch"class="btn-switch">
        <label>Light</label>
        <label class="switch" for="switch-mode">
            <input type="checkbox" id="switch-mode">
            <span class="slider round"></span>
        </label>
        <label>Dark</label>
    </div>

    <div class="account-buttons">
        @if(SignInManager.IsSignedIn(User))
        {
            <div class="profile">
                <div class="profile-image">
                    <a asp-action="Details" asp-controller="Account">
                        <img src="~/images/uploads/profiles/@user!.ProfileImage" />

                    </a>
                </div>
            </div>
        }
        else
        {
            <a class="btn-gray" asp-action="SignIn" asp-controller="Auth"><i class="fa-regular fa-arrow-right-to-bracket"></i><span>Sign In</span></a>
            <a class="btn-theme" asp-action="SignUp" asp-controller="Auth"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>

        }
    </div>
</div>